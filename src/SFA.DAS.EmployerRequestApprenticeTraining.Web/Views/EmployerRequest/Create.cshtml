@using SFA.DAS.EmployerRequestApprenticeTraining.Web.Extensions
@using SFA.DAS.EmployerRequestApprenticeTraining.Infrastructure.Configuration
@using SFA.DAS.EmployerRequestApprenticeTraining.Domain.Types
@model SFA.DAS.EmployerRequestApprenticeTraining.Web.Models.CreateEmployerRequestViewModel

@{
    ViewData["Title"] = "Create an employer request";
    ViewBag.GaData.Vpv = "/accounts/employerrequests/create";
}

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Create an employer request</h1>
                <div class="govuk-grid-column-full">
                <form method="post">
                    <div class="govuk-grid-row">
                        <div class="govuk-button-group govuk-!-margin-top-5">
                            <button class="govuk-button pledge-level-continue" data-module="govuk-button" id="pledge-create-submit">Submit my pledge</button>
                        </div>
                    </div>
                </form>
                </div>
        </div>
    </div>
</main>